#!/usr/bin/env ruby
# frozen_string_literal: true

$LOAD_PATH << File.expand_path('../lib', __dir__)

require 'melt/cli'

begin
  cli = Melt::Cli.new
  cli.execute(ARGV)
rescue Melt::SyntaxError => e
  $stderr.puts e.message
  exit 1
rescue Melt::ParseError => e
  $stderr.puts e.message
  exit 1
end
