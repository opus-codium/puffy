#!/usr/bin/env ruby
# frozen_string_literal: true

$LOAD_PATH << File.expand_path('../lib', __dir__)

require 'puffy/cli'

begin
  cli = Puffy::Cli.new
  cli.execute(ARGV)
rescue Puffy::SyntaxError => e
  $stderr.puts e.message
  exit 1
rescue Puffy::ParseError => e
  $stderr.puts e.message
  exit 1
end
